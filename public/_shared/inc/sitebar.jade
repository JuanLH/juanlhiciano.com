#sitebar
  .container
    section
      nav#main-menu(role="navigation",itemscope=true,itemtype="http://schema.org/SiteNavigationElement")
        ul.nav-links
          if(main_menu)
            each url, label in main_menu
              - selected = '';
              - path = current.path[0].replace(/\-/g, ' ');
              - if (path == label || (path == 'experiments' && label == 'lab') || (path == 'index' && label == 'home')) {
              -   selected = 'selected';
              - }
              li(class="#{selected}")
                a(href="#{url}",itemprop="url")
                  span(itemprop="name") #{label}
hr
