extends ../_shared/layout

block content
  .Content
    article.Post
      if current.source != 'index'
        header.Post-header
          h1.Post-title
            | #{header_title}
          .Post-meta
            - var authorList = authors.map(function(o){ return o.name; }).join(', ');
            span Made by 
              strong #{authorList}
      .Post-content
        != yield